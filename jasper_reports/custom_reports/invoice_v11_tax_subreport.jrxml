		</conditionalStyle>
	</style>
	<parameter name="IDS" class="java.lang.Integer" isForPrompting="false"/>
	<queryString>
		<![CDATA[SELECT  ait.invoice_id AS "Invoice",
        at.name AS "Tax",
        rcurr.name AS "Tax_currency",
        SUM(ait.amount) AS "Tax_amount"

FROM account_invoice ai
	JOIN account_invoice_tax ait ON ait.invoice_id = ai.id
	JOIN account_tax at ON at.id = ait.tax_id
	JOIN res_currency rcurr ON rcurr.id = ait.currency_id

WHERE ai.id IN ($P{IDS})

GROUP BY ait.invoice_id, at.name, rcurr.name]]>
	</queryString>
	<field name="Invoice" class="java.lang.Integer"/>
	<field name="Tax" class="java.lang.String"/>
	<field name="Tax_currency" class="java.lang.String"/>
	<field name="Tax_amount" class="java.math.BigDecimal"/>
