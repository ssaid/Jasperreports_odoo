	<queryString>
		<![CDATA[SELECT
ps.id AS "Payslip_id",
emp.id AS "Employee_id",
ps.date_to AS "Payslip_date",
TRIM(sr.code) || ' ' ||  TRIM(sr.name) AS "Line_salary_rule",
ABS(psl.quantity_print) AS "Line_quantity",
ABS(psl.amount) AS "Line_amount",
ABS(psl.total) AS "Line_total",
CASE
	WHEN src.code LIKE 'REM' THEN 1
	WHEN src.code LIKE 'NR' THEN 2
	ELSE 3
END AS category

FROM hr_payslip ps
JOIN hr_payslip_line psl
	ON psl.slip_id = ps.id
JOIN hr_salary_rule sr
	ON sr.id = psl.salary_rule_id
JOIN hr_salary_rule_category src
	ON src.id = sr.category_id
JOIN hr_contract ctr
    ON ctr.id = ps.contract_id
JOIN hr_employee emp
    ON emp.id = ps.employee_id

WHERE
	ps.id IN ($P{ID})
	AND psl.amount != 0
	AND src.code IN ('REM', 'NR','RET')

ORDER BY ps.date_to, emp.name, category, sr.code]]>
